<Window x:Class="SentinelVisionPro.Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SentinelVisionPro.Frontend"
        xmlns:viewModels="clr-namespace:SentinelVisionPro.Frontend.ViewModels"
        mc:Ignorable="d"
        Title="SentinelVision Pro" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <viewModels:ThreatViewModel/>
    </Window.DataContext>
    
    <!-- Main Grid Layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Menu Bar -->
            <RowDefinition Height="*"/>     <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Settings"/>
                <Separator/>
                <MenuItem Header="E_xit"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Dashboard"/>
                <MenuItem Header="_Camera Feeds"/>
                <MenuItem Header="_System Monitor"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>  <!-- Navigation Panel -->
                <ColumnDefinition Width="*"/>    <!-- Content Panel -->
            </Grid.ColumnDefinitions>

            <!-- Left Navigation Panel -->
            <StackPanel Grid.Column="0" Background="#F0F0F0">
                <Button Content="Dashboard" Margin="10" Padding="10"/>
                <Button Content="Camera Feeds" Margin="10" Padding="10"/>
                <Button Content="System Monitor" Margin="10" Padding="10"/>
                <Button Content="Threat Detection" Margin="10" Padding="10" Command="{Binding LoadThreatsCommand}"/>
                <Button Content="Reports" Margin="10" Padding="10"/>
            </StackPanel>

            <!-- Main Content Panel -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <TextBlock Text="Threat Detection Dashboard" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"
                         FontSize="24"
                         Margin="0,0,0,20"/>
                
                <!-- Loading Indicator -->
                <ProgressBar Grid.Row="1" 
                            IsIndeterminate="True" 
                            Height="2" 
                            Margin="0,0,0,10"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- Error Message -->
                <TextBlock Grid.Row="1" 
                          Text="{Binding ErrorMessage}" 
                          Foreground="Red" 
                          Margin="0,0,0,10"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                
                <!-- Threats List -->
                <ListView Grid.Row="1" 
                         ItemsSource="{Binding Threats}"
                         Visibility="{Binding Threats.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding Type}" 
                                         FontWeight="Bold" 
                                         Grid.Column="0"/>
                                
                                <TextBlock Text="{Binding Severity}" 
                                         Grid.Column="1" 
                                         Margin="10,0,0,0"/>
                                
                                <TextBlock Text="{Binding Timestamp, StringFormat=dd/MM/yyyy HH:mm:ss}" 
                                         Grid.Column="2"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                <!-- Empty State -->
                <TextBlock Grid.Row="1" 
                          Text="No threats detected. Click 'Threat Detection' to load threats." 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Visibility="{Binding Threats.Count, Converter={StaticResource InverseCountToVisibilityConverter}}"/>
            </Grid>
        </Grid>
    </Grid>
</Window> 